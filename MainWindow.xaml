<Window x:Class="clickerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clickerApp"
        mc:Ignorable="d"
        Title="Clicker Game" Height="640" Width="520" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Top">
            <Button Name="btnClassicMode" Content="Classic Clicker" MinWidth="125" Margin="10,0,5,0" Click="btnClickClassic"></Button>
            <Button Name="btnAchievements" Content="Achievements" MinWidth="100" Margin="5,0,5,0" Click="btnClickAchievements"></Button>
            <Button Name="btnSettings" Content="Settings" MinWidth="100" Margin="5,0,5,0" Click="btnClickSettings"></Button>
            <Button Name="btnPrecisionMode" Content="Precision Clicker" MinWidth="125" Margin="5,0,10,0" Click="btnClickPrecision"></Button>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,40,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
